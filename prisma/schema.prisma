generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Usuario {
  id Int @id @default(autoincrement())
  googleId String? @unique
  name String
  email String @unique
  password String

  pessoas Pessoa[] 
}

model Pessoa {
  id Int @id @default(autoincrement())
  name String
  email String
  idUsuario Int

  usuario Usuario @relation(fields: [idUsuario], references: [id])
  gasto Gasto[]
}

model Gasto {
  id String @id @default(uuid())
  name String
  value Float
  month Int
  year Int
  idPessoa Int

  pessoa Pessoa @relation(fields: [idPessoa], references: [id])

}
