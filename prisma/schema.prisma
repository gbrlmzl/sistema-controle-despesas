generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Usuario {
  idUsuario Int @id @default(autoincrement())
  googleId String
  nome String
  email String

  pessoas Pessoa[] 
}

model Pessoa {
  idPessoa Int @id
  nome String
  email String
  idUsuario Int

  usuario Usuario @relation(fields: [idUsuario], references: [idUsuario])
  gasto Gasto[]
}

model Gasto {
  idGasto String @id @default(uuid())
  nome String
  valor Float
  mes Int
  ano Int
  idPessoa Int

  pessoa Pessoa @relation(fields: [idPessoa], references: [idPessoa])

}
